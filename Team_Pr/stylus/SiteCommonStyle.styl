.AmBit__Background
    display flex
    flex-direction row
    flex-wrap wrap
    flex-shrink 2
    width 99%
    height 100%
    color #c1856b
    background linear-gradient(40deg, #a38264, #d3c39e, #bf8269)
    justify-content center
    background-repeat no-repeat
    animation: opacitySite 2s linear 0s 1 normal
    outline none
    margin-top all-margin
    margin-bottom all-margin

@keyframes opacitySite{
        from {opacity: 0;}
        to {opacity: 1;}
    }

.Column-Content
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap wrap
    width content-width
    height 873px
    margin-right all-margin
    margin-bottom all-margin

